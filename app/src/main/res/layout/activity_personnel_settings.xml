<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:openDrawer="start"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp"
            android:text="Update People Settings"
            android:textColor="@color/colorText"
            android:textSize="26sp" />


        <TextView
            android:id="@+id/personnel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/name"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/update_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/element_background_light"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/access_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/add_access_level_0_5"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/update_access_level_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/element_background_light"
            android:ems="10"
            android:hint="@string/add_access_level_0_5"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/avatar_colour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/avatar_colour"
            android:textColor="@color/colorText"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/update_avatar_colour_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/element_background_light"
            android:ems="10"
            android:hint="@string/avatar_colour"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/update_personnel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:width="100dp"
            android:background="@drawable/element_background_dark"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_hamburger_menu"
        app:menu="@menu/activity_hamburger_menu_drawer" />

</android.support.v4.widget.DrawerLayout>